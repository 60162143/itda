<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--상단 화면 입니다.-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_bottom">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_membership_option_back_ic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/login_membership_option_back_ic"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:text="회원가입 정보 입력"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="50dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="1000dp"
                    android:layout_gravity="center_vertical|center_horizontal">

                    <ImageButton
                        android:id="@+id/login_membership_option_user_profile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gray"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <ImageView
                android:id="@+id/login_membership_option_profile_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:padding="0dp"
                android:src="@drawable/ic_add"
                android:adjustViewBounds="true"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/transparent" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/login_membership_option_user_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="이름"
                android:textColor="#5E5E5E"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/login_membership_option_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="11sp"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:background="@drawable/round_gray_little"
                    android:paddingVertical="15dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"
                    android:textStyle="bold"
                    android:hint="이름을 입력해 주세요."
                    android:maxLength="10"
                    android:layout_weight="3"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/login_membership_option_user_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="휴대폰 번호 ( '-'를 제외한 번호를 입력해주세요. )"
                android:textColor="#5E5E5E"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/login_membership_option_user_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="11sp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:background="@drawable/round_gray_little"
                    android:paddingVertical="15dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"
                    android:textStyle="bold"
                    android:hint="휴대폰 번호를 입력해 주세요."
                    android:maxLength="14"
                    android:layout_weight="3"
                    android:layout_marginEnd="10dp"
                    android:digits="0123456789"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="생일"
            android:textColor="#5E5E5E"
            android:textSize="11sp"
            android:textStyle="bold"
            android:paddingStart="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="9"
            android:gravity="center">

            <NumberPicker
                android:id="@+id/login_membership_option_birthday_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"
                android:selectionDividerHeight="0dp"
                android:descendantFocusability="blocksDescendants"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                android:textColor="@color/gray03"/>

            <NumberPicker
                android:id="@+id/login_membership_option_birthday_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"
                android:selectionDividerHeight="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                android:textColor="@color/gray03"/>

            <NumberPicker
                android:id="@+id/login_membership_option_birthday_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"
                android:selectionDividerHeight="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/gray03"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/login_membership_option_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/round_color_little"
        android:text="입력완료"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

</LinearLayout>