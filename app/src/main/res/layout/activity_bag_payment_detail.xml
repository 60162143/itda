<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--상단 화면 입니다.-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_bottom">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bag_payment_detail_back_ic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/bag_payment_detail_back_ic"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:text="주문/결제 내역 상세"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--카드뷰-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--카드뷰-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="false"
                    app:cardElevation="0dp"
                    app:contentPadding="0dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="20dp"
                    android:adjustViewBounds="true">

                    <!--가게 썸네일-->
                    <ImageButton
                        android:id="@+id/bag_payment_detail_store_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/round"
                        android:contentDescription="TODO"
                        android:padding="0dp"
                        android:src="@drawable/ic_test_image"
                        app:cardCornerRadius="20dp" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/bag_payment_detail_store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="착한커피"
                        android:textColor="@color/gray05"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_weight="2"
                        android:gravity="top"/>

                    <TextView
                        android:id="@+id/bag_payment_detail_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="결제 금액 : 9,900원"
                        android:textColor="@color/gray03"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="top"/>

                    <TextView
                        android:id="@+id/bag_payment_detail_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray03"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="결제 날짜 : 2023.06.10"
                        android:layout_weight="1"
                        android:gravity="top"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제 메뉴 목록"
        android:textColor="@color/gray05"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:layout_marginVertical="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bag_payment_detail_menu_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>