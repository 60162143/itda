<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_weight="1">

    <!--카드뷰-->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--카드뷰-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp">

                <!--가게 썸네일-->
                <ImageButton
                    android:id="@+id/main_store_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:src="@drawable/ic_test_image"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"/>

                    <Button
                        android:id="@+id/main_store_bookmark"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/selector_bookmark_white"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="end|top"
                        android:visibility="gone"/>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <!--가게 명-->
            <TextView
                android:id="@+id/main_store_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="가게 명"
                android:layout_weight="7"
                android:textColor="@color/black"/>

            <!--가게 명-->
            <TextView
                android:id="@+id/main_store_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:textSize="11sp"
                android:text="1.4km"
                android:layout_weight="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/main_store_score_ic"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_star"
                android:foregroundGravity="center"/>

            <TextView
                android:id="@+id/main_store_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:text="4.8"
                android:layout_marginStart="5dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/main_store_review_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:textSize="12sp"
                android:text="(123)">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/main_store_hashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#카카오페이"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#94CFBC"/>

    </LinearLayout>

</LinearLayout>