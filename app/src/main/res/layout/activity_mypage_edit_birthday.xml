<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--상단 화면 입니다.-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_bottom">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mypage_edit_birthday_back_ic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mypage_edit_birthday_back_ic"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:text="생일 변경"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="변경하실 생일 정보를 입력해주세요."
            android:textColor="#5E5E5E"
            android:textSize="11sp"
            android:textStyle="bold"
            android:paddingStart="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="9"
            android:gravity="center">

            <NumberPicker
                android:id="@+id/mypage_edit_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                android:textColor="@color/gray03"/>

            <NumberPicker
                android:id="@+id/mypage_edit_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                android:textColor="@color/gray03"/>

            <NumberPicker
                android:id="@+id/mypage_edit_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/gray03"/>

        </LinearLayout>

        <Button
            android:id="@+id/mypage_edit_birthday_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_color"
            android:text="변경"
            android:gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>