<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_bottom">

        <ImageButton
            android:id="@+id/mypage_edit_birthday_back_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_arrow_back_green_24dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/mypageEditBirthday01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mypage_edit_birthday_back_ic"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:text="@string/mypageEditBirthday02"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="@string/mypageEditBirthday03"
            android:textColor="#5E5E5E"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="9"
            android:gravity="center"
            android:background="@drawable/round_gray_10dp"
            android:layout_marginVertical="10dp">

            <NumberPicker
                android:id="@+id/mypage_edit_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"
                android:selectionDividerHeight="0dp"
                tools:ignore="UnusedAttribute"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypageEditBirthday04"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                android:textColor="@color/gray03"/>

            <NumberPicker
                android:id="@+id/mypage_edit_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"
                android:selectionDividerHeight="0dp"
                tools:ignore="UnusedAttribute"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypageEditBirthday05"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                android:textColor="@color/gray03"/>

            <NumberPicker
                android:id="@+id/mypage_edit_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/NumberPickerText"
                android:selectionDividerHeight="0dp"
                tools:ignore="UnusedAttribute"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypageEditBirthday06"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/gray03"/>

        </LinearLayout>

        <Button
            android:id="@+id/mypage_edit_birthday_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_green_30dp"
            android:text="@string/mypageEditBirthday07"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>