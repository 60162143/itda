<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    android:background="@drawable/round_gray_30dp"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/dl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dlDelete01"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/gray04"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/dl_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/round_green_10dp"
            android:text="@string/dlDelete02"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/dl_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/round_deep_gray_10dp"
            android:text="@string/dlDelete03"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</LinearLayout>