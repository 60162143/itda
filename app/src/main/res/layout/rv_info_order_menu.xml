<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="15dp"
    android:background="@drawable/ripple_green"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/info_order_menu_center_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rvInfoOrderMenu01"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/gray05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/info_order_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rvInfoOrderMenu02"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/gray04"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/info_order_menu_center_plus"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/info_order_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rvInfoOrderMenu03"
        android:textSize="12sp"
        android:textColor="@color/gray04"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>