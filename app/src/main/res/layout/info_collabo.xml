<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/info_collabo_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageButton
            android:id="@+id/info_collabo_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/info_collabo_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아메리카노 두잔 무료"
        app:layout_constraintBottom_toTopOf="@id/info_collabo_name"
        app:layout_constraintLeft_toLeftOf="@id/info_collabo_card"/>

    <TextView
        android:id="@+id/info_collabo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="착한커피"
        app:layout_constraintLeft_toLeftOf="@id/info_collabo_card"
        app:layout_constraintBottom_toBottomOf="@id/info_collabo_card"/>









</androidx.constraintlayout.widget.ConstraintLayout>