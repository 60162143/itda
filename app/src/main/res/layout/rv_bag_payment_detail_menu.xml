<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:weightSum="6">

    <TextView
        android:id="@+id/bag_payment_detail_menu_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/rvBagPaymentDetailMenu01"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/gray04"
        android:layout_marginStart="30dp"
        android:layout_weight="4"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/bag_payment_detail_menu_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/rvBagPaymentDetailMenu02"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/gray03"
        android:layout_weight="2"
        android:gravity="center_vertical|end"
        android:layout_marginEnd="30dp"/>

</LinearLayout>