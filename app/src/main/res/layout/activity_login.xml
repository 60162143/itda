<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/login_total_scroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="10"
            android:gravity="center_horizontal"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/login_logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"
                    android:layout_marginTop="100dp"/>

                <TextView
                    android:id="@+id/login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세상을 연결해주는 도구"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/login_email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이메일을 입력해주세요."
                    android:layout_marginHorizontal="30dp"
                    android:textSize="12sp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:background="@drawable/round_gray"
                    android:paddingVertical="15dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="30dp"/>

                <EditText
                    android:id="@+id/login_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호를 입력해주세요."
                    android:textSize="12sp"
                    android:layout_marginHorizontal="30dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:background="@drawable/round_gray"
                    android:paddingVertical="15dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="30dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/login_enter_bt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="로그인"
                    android:background="@drawable/round_color"
                    android:layout_marginBottom="20dp"/>

        </LinearLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginVertical="5dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:paddingBottom="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/login_password_search_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/login_membership_bt"
                    android:text="비밀번호를 잊어버리셨나요?"
                    android:textSize="11sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/border_bottom"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/login_membership_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/login_password_search_bt"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="아직 회원이 아니신가요?"
                    android:textSize="11sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/border_bottom"
                    android:gravity="center"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="간편 로그인"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/login_kakao_logo_btn"
                    android:src="@drawable/kakao_talk_32dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>