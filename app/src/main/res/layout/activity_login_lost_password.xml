<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--상단 화면 입니다.-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_bottom">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_lost_password_back_ic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/login_lost_password_back_ic"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:text="비밀번호 찾기"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_lost_password_layout"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="가입 시 사용한 이메일로 발송된 인증번호를 입력해주세요."
            android:textColor="#5E5E5E"
            android:textSize="11sp"
            android:textStyle="bold"
            android:paddingStart="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center">

            <EditText
                android:id="@+id/login_auth_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="11sp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:background="@drawable/round_gray_little"
                android:paddingVertical="15dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:layout_marginVertical="10dp"
                android:textStyle="bold"
                android:hint="이메일을 입력해주세요."
                android:maxLength="40"
                android:layout_weight="3"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/login_auth_mail_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_color_little"
                android:textSize="11sp"
                android:text="인증번호 요청"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="7"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_auth_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginEnd="10dp">

                <EditText
                    android:id="@+id/login_auth_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="11sp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:background="@drawable/round_gray_little"
                    android:paddingVertical="15dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"
                    android:textStyle="bold"
                    android:hint="인증번호를 입력해주세요."
                    android:maxLength="10"/>

                <com.example.itda.library.timer.TimerView
                    android:id="@+id/login_auth_number_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="03:00"
                    android:textColor="@color/red05"
                    android:layout_gravity="end|center"
                    android:paddingEnd="10dp"/>

            </FrameLayout>

            <Button
                android:id="@+id/login_auth_number_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_gray_little"
                android:textSize="11sp"
                android:text="인증번호 입력"
                android:gravity="center"
                android:textStyle="bold"
                android:enabled="false"
                android:layout_weight="7"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_change_password_layout"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingVertical="5dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/login_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@drawable/round_gray"
                android:paddingVertical="15dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:layout_marginVertical="10dp"
                android:textStyle="bold"
                android:hint="새로운 비밀번호를 입력해주세요."
                android:maxLength="20"/>

            <TextView
                android:id="@+id/login_change_password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="영문, 숫자, 특수문자를 조합하여 8 ~ 20자리로 설정해주세요."
                android:textColor="#5E5E5E"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingStart="5dp"/>

            <EditText
                android:id="@+id/login_change_password_once"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@drawable/round_gray"
                android:paddingVertical="15dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:layout_marginVertical="10dp"
                android:textStyle="bold"
                android:hint="비밀번호를 다시 한 번 입력해주세요."
                android:maxLength="20"/>

            <TextView
                android:id="@+id/login_change_password_once_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="비밀번호가 일치하지 않습니다."
                android:textColor="@color/red05"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingStart="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/login_change_password_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_gray"
            android:text="변경"
            android:gravity="center"
            android:textStyle="bold"
            android:enabled="false"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</LinearLayout>