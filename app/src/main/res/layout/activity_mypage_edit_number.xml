<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--상단 화면 입니다.-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_bottom">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mypage_edit_number_back_ic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mypage_edit_number_back_ic"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:text="휴대폰번호 변경"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="변경하실 휴대폰 번호를 입력해주세요. ( '-' 제외 )"
            android:textColor="#5E5E5E"
            android:textSize="11sp"
            android:textStyle="bold"
            android:paddingStart="5dp"/>

        <EditText
            android:id="@+id/mypage_edit_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:background="@drawable/round_gray"
            android:paddingVertical="15dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"
            android:hint="휴대폰 번호를 입력해주세요."
            android:maxLength="12"/>

        <Button
            android:id="@+id/mypage_edit_number_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_gray"
            android:text="변경"
            android:gravity="center"
            android:textStyle="bold"
            android:enabled="false"/>

    </LinearLayout>

</LinearLayout>