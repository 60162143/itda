<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/bag_payment_pay_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray03"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="2023.06.10"
            android:paddingStart="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/bag_payment_used_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green05"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="( 사용 가능 )"
            android:paddingStart="5dp"
            android:gravity="center"/>

    </LinearLayout>

    <!--카드뷰-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--카드뷰-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:adjustViewBounds="true">

                <!--가게 썸네일-->
                <ImageButton
                    android:id="@+id/bag_payment_store_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round"
                    android:contentDescription="TODO"
                    android:padding="0dp"
                    android:src="@drawable/ic_test_image"
                    app:cardCornerRadius="20dp" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:id="@+id/bag_payment_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="착한커피"
                    android:textColor="@color/gray05"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/bag_payment_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아메리카노 2개 외1"
                    android:textColor="@color/gray03"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/bag_payment_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="결제 금액 : 9,900원"
                    android:textColor="@color/gray03"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/bag_payment_exp_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray03"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:text="만료 일자 : 2023.06.10"
                    android:layout_weight="1"
                    android:gravity="top"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>