<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:paddingBottom="10dp">

    <!--카드뷰-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="1000dp">

                    <ImageButton
                        android:id="@+id/mypage_review_user_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gray"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/mypage_review_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="유저명"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp">

                            <ImageButton
                                android:id="@+id/mypage_review_heart_ic"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_heart_after"
                                android:layout_marginEnd="5dp"
                                android:layout_gravity="center_vertical|center_horizontal"/>

                            <TextView
                                android:id="@+id/mypage_review_heart_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical|center_horizontal"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="10dp">

                            <ImageView
                                android:id="@+id/mypage_review_comment_ic"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_comment_after"
                                android:layout_marginEnd="5dp"
                                android:layout_gravity="center_vertical|center_horizontal"/>

                            <TextView
                                android:id="@+id/mypage_review_comment_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical|center_horizontal"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="end|center">

                            <ImageView
                                android:id="@+id/mypage_review_score_ic"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_star"
                                android:layout_marginEnd="5dp"
                                android:layout_gravity="center_vertical|center_horizontal"/>

                            <TextView
                                android:id="@+id/mypage_review_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.8"
                                android:layout_marginEnd="5dp"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical|center_horizontal"/>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <ImageButton
                            android:id="@+id/mypage_review_delete_ic"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_delete"
                            android:layout_gravity="end|center_vertical"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/mypage_review_regdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2023년 4월 13일"
                        android:textSize="11sp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/mypage_review_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기대보다 향이 좋았던 공방\n 향수 만들기 원데이클래스는 미리 예약을 해야 하기에 디퓨저만 샀어요."
                android:textSize="12sp"
                android:textColor="@color/black"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginBottom="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mypage_review_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>