<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/info_collabo_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="30dp"
        app:contentPadding="0dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/info_collabo_store_image"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/ic_test_image"
            android:padding="0dp"
            android:adjustViewBounds="true"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/info_collabo_discount_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아메리카노 두잔 무료"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_gravity="left|top"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/info_collabo_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="착한커피"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</FrameLayout>