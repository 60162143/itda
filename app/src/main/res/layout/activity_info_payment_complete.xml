<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/info_scroll_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결제 완료"
                android:textColor="@color/gray05"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:layout_marginTop="40dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_vertical">

                <!--카드뷰-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!--카드뷰-->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardUseCompatPadding="false"
                            app:cardElevation="0dp"
                            app:contentPadding="0dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            android:adjustViewBounds="true">

                            <!--가게 썸네일-->
                            <ImageButton
                                android:id="@+id/info_payment_complete_store_image"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:background="@drawable/round"
                                android:contentDescription="TODO"
                                android:padding="0dp"
                                android:src="@drawable/ic_test_image"
                                app:cardCornerRadius="20dp" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:weightSum="4">

                            <TextView
                                android:id="@+id/info_payment_complete_store_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="착한커피"
                                android:textColor="@color/gray05"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                android:gravity="top"/>

                            <TextView
                                android:id="@+id/info_payment_complete_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="결제 금액 : 33,000원"
                                android:textColor="@color/gray03"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:gravity="top"/>

                            <TextView
                                android:id="@+id/info_payment_complete_pay_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray03"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="결제 날짜 : 2023.06.10"
                                android:layout_weight="1"
                                android:gravity="top"/>

                            <TextView
                                android:id="@+id/info_payment_complete_exp_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="만료 일자 : 2023.06.24"
                                android:textColor="@color/gray03"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:gravity="top"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결제 메뉴 목록"
                android:textColor="@color/gray05"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:layout_marginVertical="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/info_payment_complete_menu_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결제 금액"
                android:textColor="@color/gray05"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/border_top_gray"
                android:paddingTop="20dp"
                android:paddingStart="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="주문 금액"
                        android:layout_weight="7"
                        android:textColor="@color/gray04"
                        android:textStyle="bold"
                        android:layout_marginStart="30dp"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/info_payment_complete_order_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="33,000원"
                        android:layout_weight="3"
                        android:textColor="@color/gray03"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:layout_marginEnd="30dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/info_payment_complete_coupon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingVertical="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="쿠폰 할인 금액"
                        android:layout_weight="7"
                        android:textColor="@color/gray04"
                        android:textStyle="bold"
                        android:layout_marginStart="30dp"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/info_payment_complete_coupon_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-2,000원"
                        android:layout_weight="3"
                        android:textColor="@color/gray03"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:layout_marginEnd="30dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="20dp"
                android:background="@drawable/border_top_gray"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="총 결제 금액"
                    android:layout_weight="7"
                    android:textColor="@color/gray04"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/info_payment_complete_total_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="33,000원"
                    android:layout_weight="3"
                    android:textColor="@color/green04"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="end"
                    android:layout_marginEnd="30dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/info_payment_complete_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="확인"
            android:textSize="14sp"
            android:background="@color/green03"/>

    </LinearLayout>

</LinearLayout>